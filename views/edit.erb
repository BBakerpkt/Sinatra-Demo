  <h1>Edit your Information</h1> 
  <font color=red><%= @message %></font><br>
  <form method=POST>
    <p>
      <label>First Name:<br/></label> 
      <input class="smalltext"  type=text size=50 name=fname value="<%= @fname %>" /></br>
      <label>Last Name:<br/></label> 
      <input class="smalltext"  type=text size=50 name=lname value="<%= @lname %>" /></br>
      <label>Email:<br/></label>
      <input class="smalltext"  type=text size=50 name=email value="<%= @email %>" /></br>
